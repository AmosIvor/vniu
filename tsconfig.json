{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    // ... other configs, if any
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"],
      "@components": ["src/components/index"],
      "@screens/*": ["src/screens/*"],
      "@theme/*": ["src/theme/*"],
      "@utils/*": ["src/utils/*"],
      "@navigators/*": ["src/navigators/*"],
      "@types/*": ["src/types/*"],
      "@modals": ["src/modals/index"]
    }
  }
}
